{
  "name": "maturion-foreman-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "tsx tests/dashboard/*.test.ts",
    "test:dashboard": "tsx tests/dashboard/*.test.ts",
    "test:drift": "tsx tests/memory-drift/*.test.ts",
    "test:qa": "tsx tests/qa/*.test.ts",
    "test:qic": "tsx tests/qic/*.test.ts",
    "test:governance": "tsx tests/governance/*.test.ts",
    "test:all": "find tests -name '*.test.ts' -type f -exec tsx {} \\; || exit 1",
    "test:watch": "tsx --watch tests/dashboard/*.test.ts",
    "test:structural": "tsx tests/qa-structural/*.test.ts",
    "test:overnight": "tsx tests/overnight-execution/*.test.ts",
    "test:wiring": "tsx tests/wiring-integrity/*.test.ts",
    "test:wiring": "tsx tests/qic/ui-wiring.test.ts",
    "test:architecture": "tsx tests/qic/architecture-integrity.test.ts",
    "test:guardrails": "tsx tests/qic/guardrails.test.ts",
    "test:ui-wiring": "tsx tests/qic/ui-wiring.test.ts",
    "test:incident": "tsx tests/qic/incident-feedback.test.ts",
    "test:performance": "tsx tests/qic/performance-integrity.test.ts",
    "test:cs5": "tsx tests/performance/*.test.ts",
    "test:zero-warning-governance": "tsx tests/qic/zero-warning-governance.test.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:production": "tsc --project tsconfig.production.json --noEmit",
    "validate:github-token": "tsx scripts/validate-github-token.ts",
    "check:token-type": "tsx scripts/check-token-type.ts",
    "qa:full": "npm run lint && npm run test:structural && npm run build",
    "qa:diff": "tsx scripts/qiel-env-diff.ts",
    "qa:preflight": "tsx scripts/pre-flight-validation.ts",
    "guardrail:report": "tsx scripts/generate-guardrail-report.ts",
    "guardrail:baseline": "tsx scripts/generate-baseline-hashes.ts",
    "guardrail:scan-suppressions": "tsx scripts/scan-suppressions.ts",
    "qiel": "tsx scripts/run-qiel.ts",
    "qiel:quick": "tsx scripts/run-qiel.ts --quick",
    "qiel:full": "tsx scripts/run-qiel.ts --full",
    "overnight": "tsx scripts/run-overnight-execution.ts",
    "overnight:dry-run": "tsx scripts/run-overnight-execution.ts --dry-run",
    "wave2": "tsx scripts/run-wave2-execution.ts",
    "wave2:dry-run": "tsx scripts/run-wave2-execution.ts --dry-run",
    "wave2:validate": "tsx scripts/validate-wave2-execution.ts",
    "verify:cs3": "tsx scripts/verify-cs3-functional.ts",
    "perf:scan": "tsx scripts/run-performance-scan.ts",
    "perf:quick": "tsx scripts/run-performance-scan.ts --quick",
    "perf:enforce": "tsx scripts/run-performance-scan.ts --enforce"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "next": "^14.2.0",
    "octokit": "^3.1.2",
    "openai": "^4.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.19.26",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.0",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  }
}
