{
  "name": "maturion-foreman-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "tsx --test tests/dashboard/*.test.ts",
    "test:dashboard": "tsx --test tests/dashboard/*.test.ts",
    "test:drift": "tsx --test tests/memory-drift/*.test.ts",
    "test:all": "tsx --test tests/**/*.test.ts",
    "test:watch": "tsx --test --watch tests/dashboard/*.test.ts",
    "test:structural": "tsx --test tests/qa-structural/*.test.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:production": "tsc --noEmit --exclude 'tests/**/*'",
    "qa:full": "npm run lint && npm run test:structural && npm run build"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "next": "^14.2.0",
    "octokit": "^3.1.2",
    "openai": "^4.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.0",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  }
}
