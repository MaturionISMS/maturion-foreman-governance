{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Memory",
  "description": "Schema for project-specific context and memory",
  "type": "object",
  "required": ["projectId", "phase", "milestones", "deployments", "blockers", "decisions"],
  "properties": {
    "projectId": {
      "type": "string",
      "description": "Unique project identifier"
    },
    "phase": {
      "type": "string",
      "enum": ["concept", "architecture", "build", "deployment", "completed", "archived"],
      "description": "Current project phase"
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "status"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "blocked"]
          },
          "completedAt": {
            "type": "string",
            "format": "date-time"
          },
          "blockers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "Project milestones"
    },
    "deployments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["environment", "timestamp", "success"],
        "properties": {
          "environment": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "version": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          },
          "issues": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "description": "Deployment history"
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "severity", "status"],
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "status": {
            "type": "string",
            "enum": ["open", "in_progress", "resolved"]
          },
          "category": {
            "type": "string",
            "enum": ["technical", "approval", "external", "resource"]
          }
        }
      },
      "description": "Project blockers"
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "rationale", "timestamp", "createdBy"],
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "rationale": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "createdBy": {
            "type": "string"
          }
        }
      },
      "description": "Project decisions"
    }
  }
}
