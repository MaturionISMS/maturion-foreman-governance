GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_INSTALLATION_ID=
GITHUB_WEBHOOK_SECRET=
OPENAI_API_KEY=
GITHUB_TOKEN=
# Foreman Behavior Files can be loaded from:
# 1. External GitHub repository (set these three variables)
FOREMAN_BEHAVIOUR_REPO_OWNER=
FOREMAN_BEHAVIOUR_REPO_NAME=
FOREMAN_BEHAVIOUR_DIR=
# 2. Local directory: foreman/ (behavior files included in this repo)
# Leave above three blank to use local behavior files
# Autonomous Mode Configuration
# MATURION_AUTONOMOUS_MODE enables Foreman to run without manual approval
# When true: Tasks are auto-approved, QA/compliance gates still enforced
# When false: All tasks require manual approval via /api/admin/approve
# DEFAULT RECOMMENDED: true for Maturion organization - QA controls risk
MATURION_AUTONOMOUS_MODE=true

# Backwards compatibility (deprecated, use MATURION_AUTONOMOUS_MODE instead)
MATURION_ALLOW_AUTONOMOUS_BUILDS=true

# Autonomous Mode Safeguards (comma-separated: qa,compliance,tests)
# These gates are ALWAYS enforced, even in autonomous mode
MATURION_AUTONOMOUS_GUARDS=qa,compliance,tests

# Legacy variable name (deprecated, use MATURION_AUTONOMOUS_GUARDS instead)
# MATURION_AUTONOMOUS_SAFE_GUARDS=qa,compliance,tests

# Local Builder Paths (for pilot builds and local development)
# These are used when routing tasks to Local Builder
LOCAL_FOREMAN_APP_PATH=/Users/johan/.../maturion-foreman-app
LOCAL_PARTPULSE_PATH=/Users/johan/.../partpulse
LOCAL_ISMS_PATH=/Users/johan/.../MaturionISMS
