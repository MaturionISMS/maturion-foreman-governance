{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://maturion.com/schemas/builder-qa/BUILD_QA_REPORT.schema.json",
  "title": "Builder QA Report Schema",
  "description": "Schema for Builder QA reports that serve as canonical truth for PR merge readiness. This report is generated by Builder agents after completing build-to-green process and represents the sole authority on build quality and merge eligibility.",
  "type": "object",
  "required": [
    "schema_version",
    "report_timestamp",
    "builder_id",
    "issue_number",
    "build_status",
    "qa_execution",
    "test_results",
    "merge_readiness"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Version of this schema (semver format)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "const": "1.0.0"
    },
    "report_timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when report was generated",
      "format": "date-time"
    },
    "builder_id": {
      "type": "string",
      "description": "Identifier of the builder agent that executed this build"
    },
    "issue_number": {
      "type": "integer",
      "description": "GitHub issue number this build addresses",
      "minimum": 1
    },
    "issue_title": {
      "type": "string",
      "description": "Title of the GitHub issue"
    },
    "build_status": {
      "type": "string",
      "description": "Overall status of the build",
      "enum": ["PASS", "FAIL", "INCOMPLETE"]
    },
    "qa_execution": {
      "type": "object",
      "description": "Details of QA test execution",
      "required": ["pre_build_status", "post_build_status", "execution_timestamp"],
      "properties": {
        "pre_build_status": {
          "type": "string",
          "description": "QA status before build (should be RED/FAIL for proper build-to-green)",
          "enum": ["RED", "FAIL", "NOT_RUN", "SKIP"]
        },
        "post_build_status": {
          "type": "string",
          "description": "QA status after build completion",
          "enum": ["GREEN", "PASS", "RED", "FAIL", "INCOMPLETE"]
        },
        "execution_timestamp": {
          "type": "string",
          "description": "When QA was executed",
          "format": "date-time"
        },
        "execution_duration_ms": {
          "type": "integer",
          "description": "Duration of QA execution in milliseconds",
          "minimum": 0
        }
      }
    },
    "test_results": {
      "type": "object",
      "description": "Detailed test execution results",
      "required": ["total_tests", "passed", "failed", "skipped", "test_debt"],
      "properties": {
        "total_tests": {
          "type": "integer",
          "description": "Total number of tests in suite",
          "minimum": 0
        },
        "passed": {
          "type": "integer",
          "description": "Number of tests that passed",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "description": "Number of tests that failed",
          "minimum": 0
        },
        "skipped": {
          "type": "integer",
          "description": "Number of tests skipped (test debt indicator)",
          "minimum": 0
        },
        "test_debt": {
          "type": "boolean",
          "description": "Whether test debt exists (skipped, disabled, or incomplete tests)"
        },
        "coverage_percentage": {
          "type": "number",
          "description": "Test coverage percentage",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "merge_readiness": {
      "type": "object",
      "description": "Merge readiness assessment based on build philosophy",
      "required": ["ready", "blocking_issues"],
      "properties": {
        "ready": {
          "type": "boolean",
          "description": "Whether PR is ready to merge (true = READY_FOR_MERGE)"
        },
        "blocking_issues": {
          "type": "array",
          "description": "List of issues blocking merge (empty if ready=true)",
          "items": {
            "type": "object",
            "required": ["category", "description"],
            "properties": {
              "category": {
                "type": "string",
                "description": "Category of blocking issue",
                "enum": [
                  "TEST_FAILURES",
                  "TEST_DEBT",
                  "BUILD_ERRORS",
                  "LINT_ERRORS",
                  "ARCHITECTURE_MISMATCH",
                  "INCOMPLETE_IMPLEMENTATION",
                  "GOVERNANCE_VIOLATION"
                ]
              },
              "description": {
                "type": "string",
                "description": "Human-readable description of the blocking issue"
              },
              "severity": {
                "type": "string",
                "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"]
              }
            }
          }
        },
        "build_to_green_achieved": {
          "type": "boolean",
          "description": "Whether build-to-green was achieved (RED â†’ GREEN)"
        }
      }
    },
    "architecture_compliance": {
      "type": "object",
      "description": "Verification that implementation matches architecture",
      "properties": {
        "architecture_document": {
          "type": "string",
          "description": "Path or reference to architecture document"
        },
        "compliance_verified": {
          "type": "boolean",
          "description": "Whether architecture compliance was verified"
        },
        "deviations": {
          "type": "array",
          "description": "Any deviations from architecture",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "evidence_artifacts": {
      "type": "array",
      "description": "Paths to additional evidence artifacts",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Additional notes from builder about this build"
    }
  },
  "additionalProperties": false
}
